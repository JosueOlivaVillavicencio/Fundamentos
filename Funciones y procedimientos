int sumar2Numeros(int x, int y) {
    return x + y;
}
float sumar3Numeros(float x, float y, float z) {
    return x + y + z;
}
void sumarNumeros(int x, int y) {
    int mult = x * y;
    cout << "La suma es: " << mult;

}
void notasEstudiantes(string materia, int nota, string nombre, bool aprobo){
    cout << "El estudiante " << nombre << "tiene una nota de: " << nota << endl;
    if (aprobo=true ) {
        cout << "La materia"<<materia<<"fue aprobada con"<<nota<<endl;
    }
    else {
        cout << "La materia" << materia << "fue reprobada con" << nota << endl;
    }
}

