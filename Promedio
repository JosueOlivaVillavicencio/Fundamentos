#include <iostream>

using namespace std;

int main()
{
    int a,b,c;
    float prom;
    cout<<"ingresar el primer numero: ";
    cin>>a;
    cout<<"ingresar el segundo numero: ";
    cin>>b;
    cout<<"ingresar el tercer numero: ";
    cin>>c;
    if (a<=10 && a>=0 && b<=10 && b>=0 && c<=10 && c>=0)
    {
         prom=(a+b+c)/3;
         cout<<"El promedio es: "<<prom<<endl;
    }
    else
        cout<<"ERROR"<<endl;
        
    if (a>10 || a<0)
       cout<<"El primer numero no esta en el rango"<<endl;
    if (b>10 || b<0)
       cout<<"El segundo numero no esta en el rango"<<endl;
    if (c>10 || c<0)
       cout<<"El tercer numero no esta en el rango"<<endl;
       
    return 0;
}
