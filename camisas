#include <iostream>

using namespace std;

int main()
{
    int cantidad;
    float precio, total;
    cout<<"Ingresar la cantidad de camisas: ";
    cin>>cantidad;
    cout<<"Ingresar el precio de camisas: ";
    cin>>precio;
    if (cantidad >=3)
        total=(cantidad*precio)*0.8;
    else
        total=(cantidad*precio)*0.9;
    cout<<"El total a pagar es: "<<total;

    return 0;
}
