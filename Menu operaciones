#include <iostream>

using namespace std;

int main()
{
    int a,b,c,opcion;
    cout<<"Ingrese el valor de a: "<<endl;
    cin>>a;
    cout<<"Ingrese el valor de b: "<<endl;
    cin>>b;
    do {
    cout<<"\t MENU "<<endl; // \ t es un tabulador
    cout<<"1.- suma "<<endl;
    cout<<"2.- resta "<<endl;
    cout<<"3.- producto "<<endl;
    cout<<"4.- resta "<<endl;
    cout<<"Elige una opcion  "<<endl;
    cin>>opcion;
    switch(opcion){
        case 1: r=a+b;
            break;
        case 2: r=a-b;
            break;
        case 3: r=a*b;
            break;
        case 4: r=a/b;
            break;
        default: cout<<"no existe esa opcion ";
    }
    cout<<"El resultado es "<<r<<endl;
}while(opcion!=0);


    return 0;
}
